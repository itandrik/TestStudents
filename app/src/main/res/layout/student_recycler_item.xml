<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/eight"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/student_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_student" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp">
        <TextView
            android:fontFamily="sans-serif"
            android:textSize="@dimen/primary_font"
            android:textColor="@color/primaryTextColor"
            android:id="@+id/student_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="sans-serif"
            android:textSize="@dimen/secondary_font"
            android:textColor="@color/secondaryTextColor"
            android:id="@+id/student_birthday_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/student_info_btn"
        android:layout_width="wrap_content"
        android:paddingStart="16dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_information_outline_black_36dp" />

</LinearLayout>